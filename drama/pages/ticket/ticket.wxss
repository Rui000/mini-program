  border-radius: 16rpx;
}
.submit-button{
  width: 166rpx;
  height: 54rpx;
  background: #DADADA;
  border-radius: 16rpx;
  font-size: 24rpx;
  justify-content: center;
  margin-left: 20rpx;
}
.coupon-number{
  display: flex;
  margin-left: 40rpx;
  margin-top: 1vh;
  font-size:24rpx
}
.total{
  font-size: 28rpx;
  margin-left: 38rpx;
  font-weight: 600;
  margin-top: 1vh;
}
.buy{
  position: fixed;
  margin-left: 40rpx;
  background: #D08802;
  border-radius: 16rpx;
  width: 670rpx;
  height: 5.5vh;
  margin-top: 12.4vh;/* 165rpx*/
  position:fixed;
  bottom: 2vh;
}
.font{
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  line-height: 74rpx;
}
.movable-area{
    
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.movable-view{
  pointer-events:auto;
  height: 120rpx;
  width: 120rpx;
  background:  #E6CD9C;
  border-radius: 100%;
}
.img{
  height: 60rpx;
