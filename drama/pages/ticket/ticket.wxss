.tab-nav {
  position: relative;
  align-self: center;
  height: 54rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: white;
  border-radius: 30rpx;
}

.tab {
  font-weight: 500;
  font-size: 28rpx;
  color:  #AAAAAA;
  width: 90px;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  padding: 0 6rpx;
  position: relative;
  background-color: white;
  border-radius: 20rpx;
  letter-spacing: 0.05em;
  
}
.tab.active{
  font-size: 28rpx;
  letter-spacing: 0.05em;
  text-decoration-line: underline;
  color: #D08802;
  width: 90px;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  padding: 0 6rpx;
  position: relative;
  background-color: white;
  border-radius: 20rpx;
}
.act-number{
  width: 670rpx;
